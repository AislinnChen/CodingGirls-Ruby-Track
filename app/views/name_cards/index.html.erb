<p id="notice"><%= notice %></p>

<h1>Listing Name Cards</h1>

<table>
  <thead>
    <tr>
      <th>Given name</th>
      <th>Fax</th>
      <th>Cell phone</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @name_cards.each do |name_card| %>
      <tr>
        <td><%= name_card.given_name %></td>
        <td><%= name_card.fax %></td>
        <td><%= name_card.cell_phone %></td>
        <td><%= name_card.address %></td>
        <td><%= link_to 'Show', name_card %></td>
        <td><%= link_to 'Edit', edit_name_card_path(name_card) %></td>
        <td><%= link_to 'Destroy', name_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

